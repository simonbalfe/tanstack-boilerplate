{
  "name": "saas-boilerplate",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && tsc --noEmit",
    "start": "NODE_ENV=production node .output/server/index.mjs",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "lint": "eslint .",
    "knip": "knip",
    "stripe": "stripe listen --forward-to localhost:3000/api/webhooks/stripe",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "vercel-build": "pnpm db:generate && pnpm db:migrate && vite build",
    "docker:build": "source .env 2>/dev/null; docker build --build-arg VITE_STRIPE_PUBLISHABLE_KEY=$VITE_STRIPE_PUBLISHABLE_KEY --build-arg VITE_STRIPE_PRICE_ID=$VITE_STRIPE_PRICE_ID --build-arg VITE_POSTHOG_KEY=$VITE_POSTHOG_KEY --build-arg VITE_POSTHOG_HOST=$VITE_POSTHOG_HOST --build-arg VITE_APP_URL=$VITE_APP_URL -t saas-boilerplate .",
    "docker:run": "docker run -d --name saas-boilerplate --env-file .env -p 3000:3000 saas-boilerplate",
    "docker:stop": "docker rm -f saas-boilerplate",
    "docker:logs": "docker logs -f saas-boilerplate"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-email/components": "^0.0.36",
    "@stripe/stripe-js": "^2.4.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-router": "^1.157.16",
    "@tanstack/react-start": "^1.157.16",
    "@types/node": "^24.10.9",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@upstash/redis": "^1.36.1",
    "better-auth": "^1.4.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.503.0",
    "next-themes": "^0.4.6",
    "postgres": "^3.4.8",
    "posthog-js": "^1.336.4",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "recharts": "2.15.4",
    "resend": "^4.8.0",
    "sonner": "^2.0.7",
    "stripe": "^18.5.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "resolutions": {
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.22.1",
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4.1.18",
    "@vitejs/plugin-react": "^5.1.2",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "knip": "^5.82.1",
    "tw-animate-css": "^1.4.0",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.5",
    "wrangler": "^4.61.1"
  }
}
